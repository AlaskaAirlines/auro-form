{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build", 
        "build:sass", 
        "build:version", 
        "postCss:component", 
        "sass:render", 
        "bundler", 
        "types"
      ],
      "outputs": [
        "dist/**",
        "build/**",
        "src/**/*.css",
        "*-css.js"
      ]
    },
    "@auro-formkit/auro-combobox#build": {
      "dependsOn": [
        "@auro-formkit/auro-input#build",
        "@auro-formkit/auro-dropdown#build",
        "postCss:component",
        "sass:render"
      ]
    },
    "@auro-formkit/auro-datepicker#build": {
      "dependsOn": [
        "@auro-formkit/auro-input#build",
        "@auro-formkit/auro-dropdown#build",
        "postCss:component",
        "sass:render"
      ]
    },
    "@auro-formkit/auro-select#build": {
      "dependsOn": [
        "@auro-formkit/auro-dropdown#build",
        "postCss:component",
        "sass:render"
      ]
    },
    "build:docs": {
      "outputs": ["README.md", "demo/index.*", "docs/partials/*.md"]
    },
    "build:docs:kit": {
      "inputs": ["docs/partials/**/*"],
      "outputs": ["README.md"]
    },
    "build:version": {
      "outputs": ["src/*.js", "src/**/*.js"]
    },
    "build:sass": {
      "outputs": ["src/**/*.css"],
      "inputs": ["src/**/*.scss"]
    },
    "postCss:component": {
      "dependsOn": ["build:sass"],
      "inputs": ["src/**/*.css"],
      "outputs": [
        "src/**/*.css",
        "src/**/*-css.js"
      ]
    },
    "sass:render": {
      "dependsOn": ["postCss:component"],
      "inputs": ["src/**/*.css"],
      "outputs": ["src/**/*-css.js"]
    },
    "bundler": {
      "dependsOn": ["sass:render", "postCss:component"],
      "outputs": ["dist/**"]
    },
    "types": {
      "outputs": ["dist/**"]
    },
    "build:watch": {
      "dependsOn": ["^build"],
      "persistent": true
    },
    "dev": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**/*.js", "test/**/*.js"]
    },
    "lint": {
      "outputs": []
    }
  }
}