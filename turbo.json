{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "build:sass"],
      "outputs": ["dist/**"]
    },
    "build:sass": {
      "outputs": ["src/**/*.css"],
      "inputs": ["src/**/*.scss"]
    },
    "build:watch": {
      "dependsOn": ["^build"],
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**/*.js", "test/**/*.js"]
    },
    "lint": {
      "outputs": []
    }
  }
}