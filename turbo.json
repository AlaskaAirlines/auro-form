{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build", 
        "build:sass", 
        "build:version", 
        "postCss:component", 
        "sass:render", 
        "bundler", 
        "types"
      ],
      "outputs": [
        "dist/**",
        "build/**",
        "src/**/*.css",
        "*-css.js"
      ]
    },
    "@auro-formkit/combobox#build": {
      "dependsOn": [
        "@auro-formkit/input#build",
        "@auro-formkit/dropbox#build"
      ]
    },
    "build:version": {
      "outputs": ["src/*.js", "src/**/*.js"]
    },
    "build:sass": {
      "outputs": ["src/**/*.css"],
      "inputs": ["src/**/*.scss"]
    },
    "postCss:component": {
      "dependsOn": ["build:sass"],
      "inputs": ["src/**/*.css"],
      "outputs": [
        "src/**/*.css",
        "src/**/*-css.js"
      ]
    },
    "sass:render": {
      "dependsOn": ["postCss:component"],
      "inputs": ["src/**/*.css"],
      "outputs": ["src/**/*-css.js"]
    },
    "bundler": {
      "dependsOn": ["sass:render"],
      "outputs": ["dist/**"]
    },
    "types": {
      "outputs": ["dist/**"]
    },
    "build:watch": {
      "dependsOn": ["^build"],
      "persistent": true
    },
    "dev": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**/*.js", "test/**/*.js"]
    },
    "lint": {
      "outputs": []
    }
  }
}