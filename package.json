{
  "//": [
    "================================================================================",
    "# To work within the development environment, run the following tasks",
    "  1. $ npm run dev",
    "  2. Go to http://localhost:8000",
    "================================================================================"
  ],
  "name": "@aurodesignsystem/auro-form",
  "version": "0.0.0",
  "description": "auro-form HTML custom element",
  "repository": {
    "type": "git",
    "url": "https://github.com/AlaskaAirlines/auro-form"
  },
  "type": "module",
  "main": "index.js",
  "license": "Apache-2.0",
  "engines": {
    "node": "^18.x || ^20.x "
  },
  "dependencies": {
    "@aurodesignsystem/auro-button": "^8.0.0",
    "@aurodesignsystem/auro-formvalidation": "^1.0.3",
    "@aurodesignsystem/auro-icon": "^5.0.0",
    "@aurodesignsystem/auro-library": "^2.10.1",
    "@floating-ui/dom": "^1.6.11",
    "cleave.js": "^1.6.0",
    "lit": "^3.2.0"
  },
  "peerDependencies": {
    "@aurodesignsystem/design-tokens": "^4.9.2",
    "@aurodesignsystem/webcorestylesheets": "^5.1.2"
  },
  "devDependencies": {
    "@aurodesignsystem/design-tokens": "^4.9.2",
    "@aurodesignsystem/eslint-config": "^1.3.2",
    "@aurodesignsystem/webcorestylesheets": "^5.1.2",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@open-wc/testing": "^4.0.0",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^12.0.1",
    "@types/chai": "^5.0.0",
    "@types/mocha": "^10.0.9",
    "@web/dev-server": "^0.4.6",
    "@web/test-runner": "^0.19.0",
    "autoprefixer": "^10.4.20",
    "chalk": "^5.3.0",
    "compression": "^1.7.4",
    "concat": "^1.0.3",
    "concurrently": "^9.0.1",
    "copyfiles": "^2.4.1",
    "core-js": "^3.38.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.11.1",
    "eslint-plugin-jsdoc": "^50.3.0",
    "husky": "^8.0.0",
    "lodash": "^4.17.21",
    "markdown-magic": "^2.6.1",
    "nodemon": "^3.1.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.47",
    "postcss-discard-comments": "^7.0.3",
    "postcss-selector-replace": "^1.0.2",
    "rollup": "^4.22.5",
    "rollup-plugin-serve": "^1.1.1",
    "sass": "^1.79.4",
    "semantic-release": "^24.1.2",
    "stylelint": "^16.9.0",
    "stylelint-config-idiomatic-order": "^10.0.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-order": "^6.0.4",
    "stylelint-scss": "^6.7.0",
    "typescript": "^5.6.2",
    "wc-sass-render": "^1.4.0",
    "web-component-analyzer": "^2.0.0",
    "whatwg-fetch": "^3.6.20",
    "yaml-lint": "^1.7.0"
  },
  "overrides": {
    "wc-sass-render": {
      "sass": "$sass"
    }
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 iOS major versions",
    "last 2 Firefox versions",
    "last 2 Edge versions",
    "last 2 Safari major versions"
  ],
  "nodemonConfig": {
    "ignore": [
      "*-css.js",
      "*.css"
    ]
  },
  "release": {
    "branches": [
      {
        "name": "main"
      },
      {
        "name": "beta",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "./CHANGELOG.md",
          "changelogTitle": "# Semantic Release Automated Changelog"
        }
      ],
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "./package.json",
            "./CHANGELOG.md",
            "./README.md",
            "./docs/api.md",
            "./demo/index.md",
            "./demo/api.md"
          ]
        }
      ],
      "@semantic-release/github"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "alaska airlines",
    "auro",
    "design system",
    "web components"
  ],
  "scripts": {
   "dev": "npm run dev:input",
   "build": "npm-run-all build:input build:dropdown build:sass sass:render types",
   "build:test": "npm-run-all test linters",
   "build:release": "npm-run-all build build:test build:api build:docs bundler postinstall",
   "build:ci": "npm-run-all sweep build:release",
   "postinstall": "node ./node_modules/@aurodesignsystem/auro-library/scripts/build/postinstall.mjs",
   "types": "tsc",

   "build:api": "wca analyze src/auro-dropdown.js --outFiles docs/api.md",
   "build:api:input": "wca analyze \"./components/input/src/*.js\" --outFiles docs/api.md",
   "build:api:dropdown": "wca analyze \"./components/dropdown/src/*.js\" --outFiles docs/api.md",
   
   "build:input": "npm-run-all build:version:input build:sass:input sass:render:input types",
   "build:dropdown": "npm-run-all build:version:dropdown build:sass:dropdown sass:render:dropdown types",
   
   "dev:input": "concurrently --kill-others \"npm run build:watch:input\" \"npm run serve:input\"",
   "dev:dropdown": "concurrently --kill-others \"npm run build:watch:dropdown\" \"npm run serve:dropdown\"",
   
   "build:demo": "npm-run-all build demo:rm:build demo:new:build demo:copy:index:input demo:copy:demo:input demo:update:index",
   "build:demo:input": "npm-run-all build:input demo:rm:build demo:new:build demo:copy:index:input demo:copy:demo:input demo:update:index",
   "build:demo:dropdown": "npm-run-all build:dropdown demo:rm:build demo:new:build demo:copy:index:dropdown demo:copy:demo:dropdown demo:update:index",
   
   "demo:copy:demo:input": "copyfiles -u 1 -V \"./components/input/src/demo/**/*\" ./build/demo",
   "demo:copy:demo:dropdown": "copyfiles -u 1 -V \"./components/dropdown/src/demo/**/*\" ./build/demo",
   "demo:copy:index:input": "copyfiles -u 1 -V \"./components/input/src/demo/index.html\" ./build",
   "demo:copy:index:dropdown": "copyfiles -u 1 -V \"./components/dropdown/src/demo/index.html\" ./build",
   "demo:new:build": "mkdir -p ./build/css ./build/demo",
   "demo:rm:build": "rm -rf ./build",
   "demo:update:index": "node ./scripts/prepForBuild",

   "build:dev:assets": "npm-run-all build:sass:input build:sass:dropdown postCss:input postCss:dropdown sass:render",
   "build:dev:assets:input": "npm-run-all build:sass:input postCss:input sass:render:input",
   "build:dev:assets:dropdown": "npm-run-all build:sass:dropdown postCss:dropdown sass:render:dropdown",
   
   "build:docs": "node ./node_modules/@aurodesignsystem/auro-library/scripts/build/generateDocs.mjs",
   "build:docs:input": "node ./node_modules/@aurodesignsystem/auro-library/scripts/build/generateDocs.mjs",
   "build:docs:dropdown": "node ./node_modules/@aurodesignsystem/auro-library/scripts/build/generateDocs.mjs",
   
   "build:sass": "npm-run-all build:sass:input build:sass:dropdown postCss:input postCss:dropdown sass:render",
   "build:sass:input": "sass --no-source-map --load-path=node_modules --load-path=. \"./components/input/src:./components/input/src\"",
   "build:sass:dropdown": "sass --no-source-map --load-path=node_modules --load-path=. \"./components/dropdown/src:./components/dropdown/src\"",
   
   "build:version:input": "cross-env npm_config_component=input node ./components/input/src/scripts/version.mjs",
   "build:version:dropdown": "cross-env npm_config_component=dropdown node ./components/dropdown/src/scripts/version.mjs",
   
   "build:watch:input": "nodemon -e scss,js --watch \"./components/input/src\" --ignore \"*.css\" --ignore \"*-css.js\" --ignore \"*.version.js\" --ignore \"*Version.js\" --exec \"npm run build:input\"",
   "build:watch:dropdown": "nodemon -e scss,js --watch \"./components/dropdown/src\" --ignore \"*.css\" --ignore \"*-css.js\" --ignore \"*.version.js\" --ignore \"*Version.js\" --exec \"npm run build:dropdown\"",
   
   "dist:js:input": "copyfiles -u 1 -V \"./components/input/src/**/*.js\" ./dist",
   "dist:js:dropdown": "copyfiles -u 1 -V \"./components/dropdown/src/**/*.js\" ./dist",
   
   "postCss:input": "node ./node_modules/@aurodesignsystem/auro-library/scripts/build/postCss.mjs",
   "postCss:dropdown": "node ./node_modules/@aurodesignsystem/auro-library/scripts/build/postCss.mjs",
   
   "sass:render": "sass-render --load-path=node_modules \"components/**/*.css\" -t ./node_modules/@aurodesignsystem/auro-library/scripts/build/staticStyles-template.js",
   "sass:render:input": "sass-render --load-path=node_modules \"./components/input/src/**/*.css\" -t ./node_modules/@aurodesignsystem/auro-library/scripts/build/staticStyles-template.js",
   "sass:render:dropdown": "sass-render --load-path=node_modules \"./components/dropdown/src/**/*.css\" -t ./node_modules/@aurodesignsystem/auro-library/scripts/build/staticStyles-template.js",
   
   "serve": "web-dev-server --open demo/ --node-resolve --watch",
   "serve:input": "web-dev-server --open components/input/demo/ --node-resolve --watch --app-index \"./components/input/demo/index.html\"",
   "serve:dropdown": "web-dev-server --open components/dropdown/demo/ --node-resolve --watch --app-index \"./components/dropdown/demo/index.html\"",

   "build:input:full": "npm-run-all build:input build:api:input build:docs:input build:dev:assets:input",
   "build:dropdown:full": "npm-run-all build:dropdown build:api:dropdown build:docs:dropdown build:dev:assets:dropdown",
   
   "build:input:release": "npm-run-all build:input:full build:test build:demo:input",
   "build:dropdown:release": "npm-run-all build:dropdown:full build:test build:demo:dropdown",

   "sweep": "rm -rf dist && find ./demo ./src ./components -type f \\( -name \"*.css\" -o -name \"*-css.js\" \\) -delete",

   "test": "wtr --coverage",
    "test:watch": "wtr --watch",
    "test:input": "wtr \"./components/input/test/**/*.test.js\" --coverage",
    "test:input:watch": "wtr \"./components/input/test/**/*.test.js\" --watch",
    "test:dropdown": "wtr \"./components/dropdown/test/**/*.test.js\" --coverage",
    "test:dropdown:watch": "wtr \"./components/dropdown/test/**/*.test.js\" --watch",

    "linters": "npm-run-all scssLint esLint",
    "scssLint": "stylelint \"./components/**/*.scss\"",
    "esLint": "./node_modules/.bin/eslint components/**/*.js --ignore-pattern 'components/**/*Version.js'",

    "linters:input": "npm-run-all scssLint:input esLint:input",
    "scssLint:input": "stylelint \"./components/input/**/*.scss\"",
    "esLint:input": "./node_modules/.bin/eslint components/input/**/*.js --ignore-pattern 'components/**/*Version.js'",

    "bundler": "rollup -c",
    "bundler:test": "rollup -c -w",

    "preCommit": "node ./node_modules/@aurodesignsystem/auro-library/scripts/build/pre-commit.mjs"
  }
}
